{
   "compilerOptions": {
      "outDir": "build",
      "module": "commonjs",
      "target": "es2019",
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
         "~/tests/*": ["../tests/*"],
         "~/*": ["*"]
      },
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictNullChecks": true
   },
   "include": ["src", "tests"],
   "exclude": []
}